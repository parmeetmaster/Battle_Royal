<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20242D"
    tools:context=".Fragments.SettingsFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="528dp"
        android:src="@drawable/star1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="278dp"
        android:layout_height="240dp"
        android:layout_marginStart="226dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/star3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="278dp"
        android:layout_height="240dp"
        android:layout_marginStart="236dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/star2"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="501dp"
        android:src="@drawable/star5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificationTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_notifications"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/profileTv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:foregroundGravity="left"
        android:src="@drawable/ic_user_pen_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pubg" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="BATTLE ROYAL"
        android:textColor="#FD0404"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <TextView
            android:id="@+id/leaderboardTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="LEADERBOARD"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_leaderboard"
            android:drawableTint="#FF9800"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>

        <TextView
            android:id="@+id/walletTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Wallet"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_baseline_account_balance_wallet_24"
            android:drawableTint="#EA3030"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>


        <TextView
            android:id="@+id/ytTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Youtube"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/youtube"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>

        <TextView
            android:id="@+id/igTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Instagram"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/instagram"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>

        <TextView
            android:id="@+id/faqTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="FAQ's"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/faq"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>

        <TextView
            android:id="@+id/aboutTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="About US"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/about_us"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>

        <TextView
            android:id="@+id/policiesTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Policies"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/terms_and_conditions"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>


        <TextView
            android:id="@+id/supportTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Customer Support"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_baseline_support"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>
        <TextView
            android:id="@+id/adminTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Organize Customs"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/user"
            android:drawableTint="@color/darkOrange"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>

        <TextView
            android:id="@+id/inviteTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="Invite &amp; Earn"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_baseline_support"
            android:drawableTint="#FFF176"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>


        <TextView
            android:id="@+id/logoutTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="05dp"
            android:paddingStart="30dp"
            android:gravity="center|left"
            android:text="LOGOUT"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_baseline_logout"
            android:drawableTint="#3CCA42"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient_rect"/>






    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>