<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/materialBlue500"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ob2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias=".3"
            app:layout_constraintVertical_bias=".3"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battle Royal"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toTopOf="@+id/imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageview"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/skipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview"
            app:layout_constraintStart_toEndOf="@id/textview"
            app:layout_constraintHorizontal_bias="1"/>

        <TextView
            android:id="@+id/fresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esports Hub"
            android:textColor="@color/purple_700"
            android:fontFamily="sans-serif"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageview"
            app:layout_constraintTop_toBottomOf="@id/imageview"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/rewTv"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Are You Gamer? Now Earn Money While Playing with easy withdrawl process. Remember Only Skills Matters Here!!"
            android:textColor="@color/purple_700"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fresh"
            app:layout_constraintTop_toBottomOf="@id/fresh"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:src="@drawable/tab2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fresh"
            app:layout_constraintStart_toStartOf="@+id/fresh"
            app:layout_constraintVertical_bias=".6"
            app:layout_constraintHorizontal_bias="0"/>



</androidx.constraintlayout.widget.ConstraintLayout>